#!/bin/bash

curl -L# https://raw.githubusercontent.com/jmmaloney4/Xpkg/install/scripts/pre > ~/.xpkg_pre_install
curl -L# https://raw.githubusercontent.com/jmmaloney4/Xpkg/install/scripts/post > ~/.xpkg_post_install

sudo chmod +x ~/.xpkg_pre_install
sudo chmod +x ~/.xpkg_post_install
sudo ~/.xpkg_pre_install

cd $XPKG
sudo chown -R jack:staff ./xpkg

cd $XPKG/xpkg >> $LOG 2>&1

pod install >> $LOG 2>&1

cd $XPKG
sudo chown -R root:wheel ./xpkg

sudo ~/.xpkg_post_install

rm ~/.xpkg_pre_install
rm ~/.xpkg_post_install
